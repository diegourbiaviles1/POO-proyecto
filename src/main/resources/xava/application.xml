<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE application SYSTEM "dtds/application.dtd">

<application name="ProyectoPOO"> 
	
	<!-- 
	A default module for each entity is assumed with the
	controllers on <default-module/>
	-->
	<!-- 
	You can define additional modules, for example:	  
	<module name="OnlyReadTeacher">
		<model name="Teacher"/>
		<controller name="Print"/>
	</module>		
	-->


        <!-- Módulo por defecto: usa Typical en todos los módulos que no se definan -->
        <default-module>
            <controller name="Typical"/>
        </default-module>

        <!-- Módulo específico para Paquete: usa el controller Paquete -->
        <module name="Paquete">
            <model name="Paquete"/>
            <controller name="Paquete"/>
        </module>




</application>
